    "field": {
      "name": "item",
      "type": "group",
      "label": "Item",
      "importance": "low",
      "expanded": true,
      "fields": [
        {
          "name": "chapter_title",
          "label": "Chapter title",
          "importance": "high",
          "type": "text",
          "optional": true,
          "placeholder": "Insert chapter here",
          "description": "The name of the chapter"
        },
        {
          "label": "Chapter",
